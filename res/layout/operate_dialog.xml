<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="300dp"    
    android:orientation="vertical" >
	<TextView  android:id="@+id/down_dialog_id" android:background="@drawable/sel_list_item"
	    android:layout_height="fill_parent" android:layout_width="fill_parent"
	    android:layout_weight="1" android:gravity="center" android:textColor="@drawable/sel_btn_text"
	    android:textSize="20sp" android:text="下载" android:clickable="true"/>
	<ImageView android:src="@drawable/line"
	    android:layout_width="fill_parent" android:layout_height="1dp"/>
	<TextView  android:id="@+id/pause_dialog_id" android:background="@drawable/sel_list_item"
	    android:layout_height="fill_parent" android:layout_width="fill_parent"
	    android:layout_weight="1" android:gravity="center" android:textColor="@drawable/sel_btn_text"
	    android:textSize="20sp" android:text="暂停" android:clickable="true"/>
	<ImageView android:src="@drawable/line"
	    android:layout_width="fill_parent" android:layout_height="1dp"/>
	<TextView  android:id="@+id/delete_dialog_id" android:background="@drawable/sel_list_item"
	    android:layout_height="fill_parent" android:layout_width="fill_parent"
	    android:layout_weight="1" android:gravity="center" android:textColor="@drawable/sel_btn_text"
	    android:textSize="20sp" android:text="删除" android:clickable="true"/>
	<ImageView android:src="@drawable/line"
	    android:layout_width="fill_parent" android:layout_height="1dp"/>
	<TextView  android:id="@+id/read_dialog_id" android:background="@drawable/sel_list_item"
	    android:layout_height="fill_parent" android:layout_width="fill_parent"
	    android:layout_weight="1" android:gravity="center" android:textColor="@drawable/sel_btn_text"
	    android:textSize="20sp" android:text="阅读" android:clickable="true"/>
	<ImageView android:src="@drawable/line"
	    android:layout_width="fill_parent" android:layout_height="1dp"/>
	<TextView  android:id="@+id/cancel_dialog_id" android:background="@drawable/sel_list_item"
	    android:layout_height="fill_parent" android:layout_width="fill_parent"
	    android:layout_weight="1" android:gravity="center" android:textColor="@drawable/sel_btn_text"
	    android:textSize="20sp" android:text="取消" android:clickable="true"/>
</LinearLayout>